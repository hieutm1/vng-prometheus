[Unit]
Description=Node Exporter
Requires=network.target
[Service]
Type=simple
ExecStart=/usr/local/bin/node-exporter --collector.processes --collector.tcpstat --log.level=error --collector.filesystem.ignored-fs-types=^(nfs|nfs4)$ --web.listen-address=localhost:11020
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=60
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=node-exporter
User=nobody
[Install]
WantedBy=default.target
